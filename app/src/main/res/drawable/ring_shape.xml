<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 内部白色圆形 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000000"/> <!-- 白色 -->
        </shape>
    </item>

    <!-- 外部黑色环形 -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFFFF"/> <!-- 黑色 -->
        </shape>
    </item>

</layer-list>
