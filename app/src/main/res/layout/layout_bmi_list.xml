<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_wh"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bmi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Normal"
            android:textColor="#FF06CB9D"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bmi_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.53"
            android:textColor="#FF333333"
            android:textSize="20sp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@+id/tv_bmi_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_bmi_type" />

        <TextView
            android:id="@+id/tv_bmi_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="BMI"
            android:textColor="#FFA6A6A6"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bmi_value"
            app:layout_constraintStart_toEndOf="@+id/tv_bmi_value" />

        <ImageView
            android:id="@+id/img_note"
            android:layout_width="11dp"
            android:layout_height="14dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/icon_edit"
            app:layout_constraintBottom_toTopOf="@+id/tv_bmi_date"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_bmi_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024/6/1 12:34"
            android:textColor="#FFA6A6A6"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_delete"/>
</LinearLayout>